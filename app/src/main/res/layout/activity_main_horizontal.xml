<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main_horizontal_lv_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e2e2e2"
        android:padding="10dp"
        android:weightSum="7">

        <TextView
            android:id="@+id/item_horizontal_total_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="id"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_horizontal_total_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="name"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_horizontal_total_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="status"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_horizontal_total_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="addr"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_horizontal_total_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="createdAt"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/main_horizontal_lv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_total_lift"/>


</androidx.constraintlayout.widget.ConstraintLayout>